  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CHIP-8 Virtual Machine\CHIP-8 Virtual Machine.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="wwwroot\beep.wav">
